{% extends 'base.html.twig' %}

{% block title %} Details {% endblock %}

{% block body %}

<div class="container bg-light">

    <div id="infosection1" class="col-lg-8 p-3">
        <div id="infotexte" class="w-100">
            <div id="filmwatchlist">
                <p><img src="{{ asset('img/bookmark-solid-svg.png')}}" alt="bookmark" id="bookmark"></p>


            </div>
            <div id="infos">
                <div id="titrenote" class="mb-0 pb-0">
                    <h2 class="mb-5 pl-2 pr-1 bgc-titre">{{ film.titre }}</h2>
                    <div id="note" class="pr-4 pb-3">
                        <p class="mr-3 item2 h4" id="note1"><i class="fas fa-star color text-warning"></i> {{ film.note }}<span class="h6 text-white-50">/5</span></p>
                        <p class="p-1 mb-5 h4" id="notez"><i class="far fa-star"></i><span class="h6"> Notez
                                            ce film</span></p>
                    </div>

                </div>
                <div id="categorie" class=" text-center  mt-0 mb-0">
                    <p class="pr-2 mr-2 segment ">{{ film.classification }}</p>
                    <p class="pr-2 mr-2 segment">{{ film.nationalite }}</p>
                    <p class="pr-2 mr-2 segment">{{ film.type }}</p>
                    <p class="pr-2 mr-2 segment1">{{ film.dateDeSortie }}</p>
                </div>

            </div>

        </div>

        <div id="media">
            <div id="affiche">
                <img src="{{ resize(film.poster, 300, 350) }}" alt="joker">
            </div>

            <div id="bandeannonce">
                <iframe src="{{ film.trailer }}" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>

        </div>

    </div>

    <div id="carouselExampleSlidesOnly" class="carousel slide col-lg-4 p-3" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('img/pub3.jpg')}}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/publeclerc.jpg')}}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/pub-sixt-zidane-2-retour.png')}}" class="d-block w-100" alt="...">
            </div>

        </div>

    </div>
</div>
    <div class="vide"></div>
    <section id="synopsis" class="container p-3 bg-white">

        <h2 class=" bgc-titre1 mr-2">Synopsis</h2>

        <span class="pb-5"> {{ film.classification }} </span>
        <p class="mt-3 descente p-3"> {{ film.synopsis | striptags }} <br> <br>

            <small>{{ film.dateDeSortie }} / {{ film.nationalite }} / {{ film.type }}
                De Todd Phillips
                Avec Joaquin Phoenix, Robert De Niro, Zazie Beetz
                Nationalités américain, canadien.</small>


        </p>

        <small class="my-3"><a href="#">Voir le casting et l'équipe technique</a><i
                    class="fas fa-angle-double-right ml-2"></i></small>


    </section>
    <div class="vide"></div>
    <section id="critiquespresse" class="couleurfont container p-3">

        <h2 class="bgc-titre1">Critiques presse</h2>

        <div id="critiquesspectateurs">



            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">

                    {% for commentaire in commentaires %}

                    <div class="row critique">

                        <div class="col-lg-2 user text-center" >

                            <a href="#"><img src="{{ asset('img/profile-placeholder.jpg') }}" width="80" class="img-responsive" id="placeholder" alt=""></a>
                            <p>{{ commentaire.user.firstname }}</p>
                        </div>

                        <div class="col-lg-1">
                            <br>
                            <p>Note du film</p>
                            <p>{{ commentaire.note }} / 10</p>
                        </div>
                        <div class="col-lg-8">

                            <p>{{ commentaire.text }}</p>
                        </div>

                    </div>

                    {% endfor %}


                </div>

                <div class="pt-3">
                    {{ knp_pagination_render(commentaires) }}
                </div>

            </div>
        </div>
    </section>






    {% if app.user %}
        <section id="commentaire-form" class="container p-3 bg-white mt-3">
            {{ form(commentaire_form) }}
        </section>
    {% else %}
        <a href="{{ path('app_login') }}" class="btn btn-primary">Connectez-vous maintenant pour ajouter un commentaire</a>
    {% endif %}


{% endblock %}

{% block javascripts %}

    <script src="{{ asset('assets/js/script.js') }}"></script>

{% endblock %}